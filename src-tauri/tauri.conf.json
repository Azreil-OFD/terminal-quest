{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "terminal-quest",
    "version": "0.0.0"
  },
  "tauri": {
    "cli": {
      "description": "режим", 
      "longDescription": "режимы", 
      "args": [
        {
          "name": "mode",
          "short": "m",
          "takesValue": true,
          "possibleValues": ["admin", "view"]
        }
      ]
    },
    "allowlist": {
      "all": true
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.terminal.quest",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "terminal-quest",
        "width": 800,
        "height": 600
      }
    ]
  }
}
